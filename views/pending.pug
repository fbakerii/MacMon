extends navbar
block header
  script(src='/js/asset-tables.js')
block selected
  -var selected = 'New Detected Devices';
block body
  .container-fluid
    .row
      .col
        p
          | Some controls will go here
          br
          | Thigs like view filters
          br
          | Also probably export to pdf, excel, etc
    .row
      .col
        table#assetTable.table.table-responsive.table-sm.table-hover
          thead.thead-dark
            tr
              th
              th Mac Address
              th Name
              th Decription
              th Vendor
              th IP Addresses
              th Asset Type
              th Last Updated
          tbody
            - var i = 0
            each asset in assets
              - i++
              tr(id=asset.MAC)
                td
                  button.btn.btn-primary.btn-sm(onClick=('Approve("'+asset.MAC+'")')) Approve
                  br
                  button.btn.btn-success.btn-sm(onClick=('Update("'+ asset.MAC +'")')) Save
                  br
                  button.btn.btn-danger.btn-sm(onClick=('Delete("'+ asset.MAC +'")')) Delete
                td #{asset.MAC}
                td
                  input.nameInput.inputField(value=asset.Name)
                td.col
                  textarea.descriptionInput.form-control
                    | #{asset.Description}
                td #{asset.Vendor}
                td #{asset.IP}
                td
                  select.assetTypeSelector
                    option.selected(value=asset.AssetType) #{asset.AssetTypeName}
                td #{asset.LastUpdated}